{
  "name": "functions",
  "scripts": {
    "lint": "./node_modules/.bin/tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rm -rf lib/",
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "serve": "npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "pretest": "npm run build",
    "test": "firebase emulators:exec --only firestore,functions ./test.sh"
  },
  "engines": {
    "node": "10"
  },
  "type": "module",
  "main": "lib/index.js",
  "dependencies": {
    "@bubblesapp/api": "git+https://git@github.com/bubblesapp/api.git",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "firebase-tools": "^8.0.1",
    "i18n-js": "^3.5.1"
  },
  "devDependencies": {
    "@firebase/testing": "^0.18.1",
    "@types/chai": "^4.2.11",
    "@types/chance": "^1.0.9",
    "@types/i18n-js": "^3.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "chai": "^4.2.0",
    "chance": "^1.1.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.0.2",
    "typescript": "^3.2.2"
  },
  "private": true
}
